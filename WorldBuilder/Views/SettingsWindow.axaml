<Window
    x:Class="WorldBuilder.Views.SettingsWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:settings="clr-namespace:WorldBuilder.Lib.Settings"
    Title="Settings"
    Width="700"
    Height="500"
    MinWidth="600"
    MinHeight="400"
    x:DataType="settings:WorldBuilderSettings"
    Background="#0d0016"
    RequestedThemeVariant="Dark"
    Icon="avares://WorldBuilder/Assets/acme-wblogo.ico">

    <Window.Styles>
        <Style Selector="TextBlock.SettingLabel">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#c0b0d8" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>
        <Style Selector="TextBlock.SettingDescription">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="Foreground" Value="#8a7a9e" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,0,0,12" />
        </Style>
        <Style Selector="Border.SettingGroup">
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>
        <Style Selector="ListBoxItem.NavSection">
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#c0b0d8" />
        </Style>
        <Style Selector="ListBoxItem.NavSection:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#7c4dbd" />
        </Style>
        <Style Selector="ListBoxItem.NavSubSection">
            <Setter Property="Padding" Value="32,8" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="#8a7a9e" />
        </Style>
        <Style Selector="ListBoxItem.NavSubSection:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#6b3fa0" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="ListBoxItem.NavSubSection:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#2a1545" />
        </Style>
    </Window.Styles>

    <DockPanel>
        <!-- Bottom buttons -->
        <Border DockPanel.Dock="Bottom"
                BorderBrush="#2a1d42"
                BorderThickness="0,1,0,0"
                Padding="16">
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="8">
                <Button
                    Width="130"
                    Click="ResetToDefaults_Click"
                    Content="Reset to Defaults" />
                <Button
                    Width="80"
                    Classes="accent"
                    Click="Save_Click"
                    Content="Save" />
                <Button
                    Width="80"
                    Click="Cancel_Click"
                    Content="Cancel" />
            </StackPanel>
        </Border>

        <!-- Left Navigation -->
        <Border
            Width="200"
            Background="#16102a"
            BorderBrush="#2a1d42"
            BorderThickness="0,0,1,0"
            DockPanel.Dock="Left">
            <ScrollViewer>
                <Panel x:Name="NavigationContainer" />
            </ScrollViewer>
        </Border>

        <!-- Main content area -->
        <Panel x:Name="ContentContainer" Margin="16,16,16,0" />

    </DockPanel>

</Window>